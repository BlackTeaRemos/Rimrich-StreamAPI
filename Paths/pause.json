{
  "/api/pause": {
    "post": {
      "tags": ["Time"],
      "summary": "Pause or unpause the game",
      "description": "POST a JSON body with { \"paused\": true } to pause, or false to resume (Normal speed).",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "paused": {
                  "type": "boolean",
                  "description": "Whether the game should be paused."
                }
              },
              "required": ["paused"]
            }
          }
        }
      },
      "responses": {
        "200": { "description": "Pause state applied" },
        "400": { "description": "Invalid request" }
      }
    }
  }
}
